<div class="card">
    <div class="card-header">
        <h4 class="panel-title">
            <a class="text-info text-decoration-none" data-toggle="collapse" href="#rhinoOptions">Rhino Options</a>
        </h4>
    </div>
    <div id="rhinoOptions" class="collapse" data-parent="#settings_content">
        <div class="card-body">
            <div class="form-group">
                <label class="col-form-label col-form-label-sm">User Name</label>
                <input type="text" class="form-control form-control-sm" id="username" placeholder="Your Rhino user name i.e. myUser@@rhino.com">
            </div>
            <div class="form-group">
                <label class="col-form-label col-form-label-sm">Password</label>
                <input type="password" class="form-control form-control-sm" id="password" placeholder="Your Rhino password">
            </div>
        </div>
    </div>
</div>